<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimens_5dp"
    android:paddingRight="@dimen/dimens_5dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp" >

                <EditText
                    android:id="@+id/etRegisterFirstName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimens_5dp"
                    android:layout_weight="1"
                    android:background="#55ffffff"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="First Name"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dimens_10dp"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/etRegisterLastName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#55ffffff"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Last Name"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dimens_10dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp" >

                <TextView
                    android:id="@+id/tvRegisterGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dimens_10dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Gender"
                    android:textAppearance="?android:attr/textAppearanceMedium"                
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"                                    
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"                                    
                        android:text="Female" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp" >

                <EditText
                    android:id="@+id/etRegisterBirth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimens_5dp"
                    android:layout_weight="1"
                    android:background="#55ffffff"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Birth Day"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dimens_10dp"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/btnRegisterDatePicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Date" />
            </LinearLayout>

            <EditText
                android:id="@+id/tvRegisterPlace"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:background="#55ffffff"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:hint="Place Of Birth"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/dimens_10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/tvRegisterPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:background="#55ffffff"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:hint="Phone"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/dimens_10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/tvRegisterHomephone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:background="#55ffffff"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:hint="Homephone"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/dimens_10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/tvRegisterEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:background="#55ffffff"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dimens_10dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/tvRegisterAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:background="#55ffffff"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:hint="Address"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/dimens_10dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/btnRegisterUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Register" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Dengan daftar ke Minimart, saya menerima Syarat dan Ketentuan, serta Kebijakan Privasi Minimart"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>