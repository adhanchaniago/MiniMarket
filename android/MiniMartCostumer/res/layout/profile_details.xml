<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimens_200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimens_5dp" >

        <TextView
            android:id="@+id/tvProfilePlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Bandung, Indonesia"
            android:textColor="#ef7f01"
            android:textSize="@dimen/text_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProfileAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Jln. Babakan Radio No. 33 Gunung Batu"
            android:textColor="#ef7f01"
            android:textSize="@dimen/text_12sp" />
        
        <TextView
            android:id="@+id/tvProfileBirthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="10 April 1990"
            android:textColor="#ef7f01"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>

</FrameLayout>