<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_profile" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimens_5dp"
        android:background="@color/main_background_end" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#333333"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvHome"
                style="@style/textSlidingMenu"
                android:drawableLeft="@drawable/menu_home"
                android:text="Home" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvAccount"
                style="@style/textSlidingMenu"
                android:drawableLeft="@drawable/menu_account"
                android:text="Account" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvActivity"
                style="@style/textSlidingMenu"
                android:drawableLeft="@drawable/menu_activity"
                android:text="Activity" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" />
            
            <TextView
                android:id="@+id/tvProduct"
                style="@style/textSlidingMenu"
                android:drawableLeft="@drawable/menu_product"
                android:text="Product" />             

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" />
            
			<TextView
                android:id="@+id/tvSales"
                style="@style/textSlidingMenu"
                android:drawableLeft="@drawable/menu_sales"
                android:text="Sales" />            

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvDepot"
                style="@style/textSlidingMenu"
                android:drawableLeft="@drawable/menu_depot"
                android:drawablePadding="@dimen/dimens_5dp"
                android:text="Depots" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" />
            
            <TextView
                android:id="@+id/tvDocument"
                style="@style/textSlidingMenu"
                android:drawableLeft="@drawable/menu_document"
                android:drawablePadding="@dimen/dimens_5dp"
                android:text="Document" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/linHeaderComunity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#333333"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimens_10dp"
                    android:text="Owner in :"
                    android:textColor="#fff" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/linComunitas"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:gravity="center_vertical"
                android:padding="@dimen/dimens_10dp"
                android:text="Tools"
                android:textColor="#fff" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvSetting"
                style="@style/textSlidingMenu"
                android:drawableLeft="@drawable/ic_setting"
                android:text="Settings" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvLogout"
                style="@style/textSlidingMenu"
                android:drawableLeft="@drawable/ic_logout"
                android:text="Logout" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimens_50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dimens_10dp"
                android:src="@drawable/logo_text" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>