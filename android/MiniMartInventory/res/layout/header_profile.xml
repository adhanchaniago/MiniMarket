<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimens_200dp"
        android:scaleType="fitXY"
        android:src="@drawable/itb" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimens_200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimens_5dp" >

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="@dimen/dimens_100dp"
            android:layout_height="@dimen/dimens_100dp"
            android:padding="5dp"
            android:background="@drawable/rounded_corner_imageview"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Fathia M. Fadilah A"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Gunung Batu, Bandung"
            android:textColor="#ef7f01"
            android:textSize="@dimen/text_16sp" />
        
    </LinearLayout>

</RelativeLayout>